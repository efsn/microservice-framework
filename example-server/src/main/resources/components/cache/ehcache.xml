<?xml version="1.0" encoding="UTF-8"?>
<!--
     1.必须要有的属性：
        name: cache的名字，用来识别不同的cache，必须惟一。
        maxElementsInMemory: 内存管理的缓存元素数量最大限值。
        maxElementsOnDisk: 硬盘管理的缓存元素数量最大限值。默认值为0，就是没有限制。
        eternal: 设定元素是否持久化。若设为true，则缓存元素不会过期。
        overflowToDisk: 设定是否在内存填满的时候把数据转到磁盘上。
    2.下面是一些可选属性：
        timeToIdleSeconds： 设定元素在过期前空闲状态的时间，只对非持久性缓存对象有效。默认值为0,值为0意味着元素可以闲置至无限长时间。
        timeToLiveSeconds: 设定元素从创建到过期的时间。其他与timeToIdleSeconds类似。
        diskPersistent: 设定在虚拟机重启时是否进行磁盘存储，默认为false.
        diskExpiryThreadIntervalSeconds: 访问磁盘线程活动时间。
        diskSpoolBufferSizeMB: 存入磁盘时的缓冲区大小，默认30MB,每个缓存都有自己的缓冲区。
        memoryStoreEvictionPolicy: 元素逐出缓存规则。共有三种:
            1.Recently Used (LRU)最近最少使用，为默认。
            2.First In First Out (FIFO)，先进先出。
            3.Less Frequently Used(specified as LFU)最少使用。
 -->

<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../config/ehcache.xsd"
         updateCheck="false" dynamicConfig="false">

    <!-- Sets the path to the directory where cache .data files are created.
 
         If the path is a Java System Property it is replaced by
         its value in the running VM.
 
         The following properties are translated:
         user.home - User's home directory
         user.dir - User's current working directory
         java.io.tmpdir - Default temp file path -->

    <diskStore path="java.io.tmpdir"/>

    <cacheManagerEventListenerFactory class="" properties=""/>

    <cache name="global"
           maxElementsInMemory="0"
           maxElementsOnDisk="0"
           eternal="true"
           overflowToDisk="false"
           timeToIdleSeconds="1800"
    />

    <!--Default Cache configuration. These will applied to caches programmatically created through
        the CacheManager.
 
        The following attributes are required for defaultCache:
 
        maxInMemory       - Sets the maximum number of objects that will be created in memory
        eternal           - Sets whether elements are eternal. If eternal,  timeouts are ignored and the element
                            is never expired.
        timeToIdleSeconds - Sets the time to idle for an element before it expires. Is only used
                            if the element is not eternal. Idle time is now - last accessed time
        timeToLiveSeconds - Sets the time to live for an element before it expires. Is only used
                            if the element is not eternal. TTL is now - creation time
        overflowToDisk    - Sets whether elements can overflow to disk when the in-memory cache
                            has reached the maxInMemory limit.
        -->

    <defaultCache
            eternal="false"
            maxEntriesLocalHeap="50"
            timeToIdleSeconds="1800"
            timeToLiveSeconds="1800"
            overflowToDisk="false"
    />

    <cache
            name="common"
            maxElementsInMemory="1000"
            maxElementsOnDisk="0"
            eternal="false"
            timeToLiveSeconds="1800"
            timeToIdleSeconds="1800"
            overflowToDisk="false"
            memoryStoreEvictionPolicy="LRU"
    />

    <cache
            name="client"
            maxElementsInMemory="100"
            maxElementsOnDisk="0"
            eternal="false"
            timeToLiveSeconds="600"
            timeToIdleSeconds="600"
            overflowToDisk="false"
            memoryStoreEvictionPolicy="LRU"
    />

    <cache
            name="token"
            maxElementsInMemory="1000"
            maxElementsOnDisk="0"
            eternal="false"
            timeToLiveSeconds="90000"
            timeToIdleSeconds="90000"
            overflowToDisk="false"
            memoryStoreEvictionPolicy="LRU"
    />

    <cache
            name="token_client"
            maxElementsInMemory="100"
            maxElementsOnDisk="0"
            eternal="false"
            timeToLiveSeconds="7200"
            timeToIdleSeconds="7200"
            overflowToDisk="false"
            memoryStoreEvictionPolicy="LRU"
    />

    <cache
            name="token_passwd"
            maxElementsInMemory="1000"
            maxElementsOnDisk="0"
            eternal="false"
            timeToLiveSeconds="86400"
            timeToIdleSeconds="86400"
            overflowToDisk="false"
            memoryStoreEvictionPolicy="LRU"
    />

</ehcache>